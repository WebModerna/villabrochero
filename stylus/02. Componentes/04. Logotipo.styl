// Logotipo y header
$color_letra = $blanco
$fondo = $verde_oscuro

.logotipo
	display table
	float left
	margin 0
	width 70%
	&--header
		color $color_letra
		display table
		font-size 12px
		font-weight lighter
		padding 0.2em
		margin 0
		text-transform uppercase
		a
			display table-cell
			margin 0
			padding 0
			vertical-align middle
			img
				width 50px
		span
			display table-cell
			vertical-align middle
			padding-left 1em
			padding-right 1em
			letter-spacing -1px
			text-align center
			&::first-letter
				font-size 15px

@media all and (min-width:980px)
	.logotipo
		background-color rgb(0,100,78)
		background url("data:image/svg+xml;base64,")
		background -moz-radial-gradient(center, ellipse cover, rgba(0,100,78,1) 0%,rgba(0,65,52,1) 75%)
		background -webkit-radial-gradient(center, ellipse cover, rgba(0,100,78,1) 0%,rgba(0,65,52,1) 75%)
		background radial-gradient(ellipse at center, rgba(0,100,78,1) 0%,rgba(0,65,52,1) 75%)
		filter unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#00644e', endColorstr='#004134',GradientType=1 )")
		border-radius 3px
		display table-cell
		float none
		margin 0
		text-align center
		vertical-align top
		width 250px

		&--header
			display table
			position relative
			width 100%
			a
				display block
				margin-top 2em
				vertical-align middle
				&:hover
					transform scale(1.1)
				img
					filter(drop-shadow(0px 0px 10px $blanco_puro))
					animation agrandador 6s ease-in-out infinite
			span
				display block
				color $blanco
				color rgba($blanco_puro, 0.6)
				height 50%
				vertical-align middle
				font-size 1em
				letter-spacing 5px
				&::first-letter
					font-size 1.3em

