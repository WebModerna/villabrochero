// Imágenes en general y de wordpress
figure
	margin 0
	text-align center

img
	height auto
	max-width 100%
	vertical-align top
	width 100%

// Imágenes destacadas
.contenido--img
	img
		width 100%

// Alineaciones de las cajas y las imágenes
.aligncenter
	display block
	margin 0.5em auto
	text-align center
.alignleft, .alignright
	display inline
	*display inline /*Target IE7 and bellow*/
	_display inline /*Target IE6 and bellow*/
.alignleft
	float left
	margin-bottom 0.1em
	margin-right 1em
	margin-top 0.6em
.alignnone
	display block
	margin 1em 0
.alignright
	float right
	margin-bottom 0.1em
	margin-left 1em
	margin-top 0.6em

@media all and (max-width: 320px)
	.size-medium
		.alignright
			margin-left 0
		.alignleft
			margin-right 0


// Clases de contenedores de imágenes en wordpress
.wp-caption
	padding 0
	text-align center
	a
		display block
		position relative
		overflow hidden
		&:before
		&:after
			background-color transparent
			background-position center center
			background-repeat no-repeat
			content ""
			display block
			height 100%
			left 0
			opacity 0
			position absolute
			top 0
			transition all 0.1s ease-in-out
			width 100%
		&:after
			background: url("data:image/svg+xml;base64,");
			background: -moz-linear-gradient(left, rgba(255,255,255,0.3) 0%, rgba(255,255,255,0.3) 100%);
			background: -webkit-linear-gradient(left, rgba(255,255,255,0.3) 0%,rgba(255,255,255,0.3) 100%);
			background: linear-gradient(to right, rgba(255,255,255,0.3) 0%,rgba(255,255,255,0.3) 100%);
			filter: unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#4dffffff', endColorstr='#4dffffff',GradientType=1 )");
			z-index 5
		&:before
			background-image url("../img/FontAwesome_f0c1(0)_128.png")
			z-index 6
		&:hover
		&:focus
			&:after
			&:before
				opacity 1



	&.aligncenter
	&.alignnone
		display block

	&-text
		background $nube
		color $gris
		font-style italic
		font-size 0.9em
		margin 0
		padding 2% 1%

// Tamaños de las imágenes por defecto en las insertadas
.size-thumbnail
	max-width 155px
	width 155px !important
.size-medium
	max-width 300px
.size-large
.size-full
	height auto
	max-width 100%
.size-large
	max-width 710px
	width 710px !important
.size-full
	max-width 100%
	width 100% !important


// Imágenes fluidas para los posts, comentarios y widgets
.comment-author
	img
		width 32px

.entry-content
.comment-content
.widget
	img
		max-width 100%

.entry-content
	img.wp-smiley
		border none
		margin-bottom 0
		margin-top 0
		padding 0

