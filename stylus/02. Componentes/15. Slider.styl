// Slider

// Barra de progreso
.progress
	background $ladrillo
	height 2px
.progress--contenedor
	background $silver

/* pager */
.cycle-pager
	overflow hidden
	position absolute
	text-align center
	top 10px
	width 100%
	z-index 500

	span
		color #ddd
		cursor pointer
		display inline-block
		font-family arial
		font-size 50px
		height 16px
		width 16px

	span.cycle-pager-active
		color #D69746

.cycle-pager > *
	cursor pointer


/* caption */
.cycle-caption
	bottom 15px
	color white
	position absolute
	right 15px
	z-index 700


/* overlay */
.cycle-overlay
	background black
	bottom 0
	color white
	font-family tahoma, arial
	opacity .5
	padding 15px
	position absolute
	width 100%
	z-index 600


/* prev / next links */
.cycle-next
.cycle-prev
	cursor pointer
	height 100%
	opacity 0
	position absolute
	top 0
	transition_comun()
	width 15%
	z-index 800
.cycle-slideshow
	&:hover
		.cycle-next
		.cycle-prev
			opacity 0.4
@media all and (min-width:720px)
	.cycle-next
	.cycle-prev
		max-width 100px
		// width 20%

.cycle-prev
	background url("data:image/png;base64,") 50% 50% no-repeat
	left 0

.cycle-next
	background url("data:image/png;base64,") 50% 50% no-repeat
	right 0
.cycle-slideshow
	.cycle-prev
	.cycle-next
		&:hover
			opacity 1

.disabled
	opacity 0.5


/* display paused text on top of paused slideshow */
.cycle-paused
	transition_comun()
	&:after
		background black
		border-radius 10px
		content 'Pausado'
		color white
		opacity 0.5
		padding 10px
		position absolute
		right 10px
		top 10px
		z-index 500

/*
	media queries
	some style overrides to make things more pleasant on mobile devices
*/

@media only screen and (max-width: 480px), only screen and (max-device-width: 480px)
	.cycle-caption
		bottom 4px
		right 4px

	.cycle-overlay
		padding 4px

