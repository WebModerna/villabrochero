// Sidebar
.sidebar
	&--section
		border-radius 3px
		box-shadow(0px 0px 0px 5px $verde_claro inset)
		margin-top 2px
		&-header
			border-radius 3px 3px 0 0
			background $verde_claro
			padding 0.5em
			h3
				color $blanco
				font-weight lighter
				letter-spacing -1px
				margin 0
				padding 0
				text-transform uppercase
		&-contenido
			background $verde_claro
			border-radius 3px

@media all and (min-width: 980px)
	.sidebar
		background $silver_claro
		border-right 3px solid transparent
		display table-cell
		max-width 253px
		min-width 253px
		padding-top 0
		vertical-align top
		width 253px
		.second_nav
			display block

	.sidebar--main
		display table
		margin-top 2px
		width 100%

@media all and (max-width: 979px)
	.sidebar--banner
		display none