// Presentaci√≥n
.presentacion
	margin 0
	.home--banners--slide
		.figure
			// .figcaption
			.slide--descripcion
				padding 0.5em
				text-align left
				width auto
				ul
					list-style none
					margin 0
					padding 0
					li
						padding 0.2em
						span
							font-weight bolder
						.boton
							color $blanco_puro
					.centro
						text-align center

@media all and (min-width:720px)
	.presentacion
		.home--banners--slide
			.figure
				.slide--descripcion
					bottom 1%
					ul
						li
							padding 0.1em 0.3em