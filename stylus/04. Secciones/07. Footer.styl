// Footer
.data_fiscal
	display inline-block
	a
		img
			animation agrandador 6s ease-in-out infinite
			width 100px
.copyright
	font-size 0.8em
	text-align left
	word-wrap break-word
	h4
		border-bottom 5px solid $verde_oscuro
		text-transform uppercase
		padding-bottom 1em
	ul
		list-style none
		padding 0
		li
			padding 0.5em 0
		li + li
			border-top 1px dotted $silver
			border-top 1px dotted rgba($silver, 0.4)
		.redes_sociales
			list-style none
			display inline-block
			border-top none
			a
				font-size 2em
				text-decoration none
				padding 0.2em

.footer
	background $verde_claro
	background url("data:image/svg+xml;base64,")
	background radial-gradient(ellipse at top, $verde_claro 0%, $verde_oscuro 100%)
	background -moz-radial-gradient(top, ellipse cover, $verde_claro 0%, $verde_oscuro 100%)
	background -webkit-radial-gradient(top, ellipse cover, $verde_claro 0%, $verde_oscuro 100%)
	filter unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#006553', endColorstr='#014035',GradientType=1 )")
	padding 0.5em
	*
		color $concreto

@media all and (min-width:800px)
	.copyright
		display table-cell
		min-width 33.33%
		padding-left 1em
		padding-right 1em
		max-width 33.33%
		width 33.33%
	.footer
		padding 0.5em 0
		// width 100%
		&--tabla
			display table
			width 100%